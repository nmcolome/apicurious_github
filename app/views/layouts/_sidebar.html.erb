<div class="sidebar">
  <% if current_user %>
    <%= image_tag @account.avatar_url, class: "avatar" %>
    <div class="card">
      <h1 class="name"><%= @account.name %></h1>
      <p class="login"><%= @account.login %></p>
    </div>
    <p class="bio"><%= @account.bio %></p>
    <div class="card">
      <p class="company"><%= @account.company %></p>
      <p class="location"><%= @account.location %></p>
      <p class="email"><%= current_user.email %></p>
      <p class="blog"><%= @account.blog %></p>
    </div>
    <% if @orgs %>
      <div class="card">
        <h2>Organizations</h2>
        <% @orgs.each do |organization| %>
          <%= image_tag organization.avatar_url, class: "xs_avatar" %>
        <% end %>
      </div>
    <% end %>
  <% else %>
    <p>Log in to show data</p>
  <% end %>
</div>